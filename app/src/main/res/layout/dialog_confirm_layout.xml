<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/confirm_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="40dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/text_color_dark"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_divider"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_confirm_negative_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/confirm_dialog_divider"
            android:gravity="center"
            android:text=""

            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            />

        <View
            android:id="@+id/confirm_dialog_divider"
            android:layout_width="0.5dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@color/main_divider"></View>
        <TextView
            android:id="@+id/dialog_confirm_positive_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/confirm_dialog_divider"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            />
    </RelativeLayout>
</LinearLayout>